{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["ES2023", "DOM"],
    "target": "es2023",
    "module": "node16",
    "moduleResolution": "node16",
    "ignoreDeprecations": "6.0",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "exclude": ["src/test-prisma.ts"]
  }
}